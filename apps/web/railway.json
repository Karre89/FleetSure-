{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npx pnpm@9 install && npx pnpm@9 run build"
  },
  "deploy": {
    "startCommand": "npx pnpm@9 start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
